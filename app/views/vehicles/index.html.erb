<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Current meter</th>
      <th>Status</th>
      <th>Vin</th>
      <th>License plate</th>
      <th>Warranty expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.number %></td>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.current_meter_value %></td>
        <td><%= vehicle.status %></td>
        <td><%= vehicle.VIN %></td>
        <td><%= vehicle.license_plate %></td>
        <% if vehicle.warranty_expiration %>
        <td><%= vehicle.warranty_expiration.strftime("%m/%d/%Y") %></td>
        <% end %>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<h4 class="h4">Import Existing Vehicle Data</h4>
<%= form_tag import_vehicles_path, multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Import From CSV" %>
<% end %>
</div>
<%= link_to 'New Vehicle', new_vehicle_path %>
