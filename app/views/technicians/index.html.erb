<p id="notice"><%= notice %></p>

<h1>Technicians</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Vehicle Operator?</th>
      <th>Hourly Rate</th>
      <th>Avatar</th>
      <th>Group</th>
      <th>Start Date</th>
      <th>Leave Date</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technicians.each do |technician| %>
      <tr>
        <td><%= technician.fullname %></td>
        <td><%= technician.email %></td>
        <td><%= technician.vehicle_operator %></td>
        <td><%= technician.hourly_labor_rate_cents %></td>
        <td><%= image_tag(technician.avatar_url, size: "50x50") if technician.avatar? %></td>
        <td><%= technician.active %></td>
        <td><%= link_to 'Show', technician %></td>
        <td><%= link_to 'Edit', edit_technician_path(technician) %></td>
        <td><%= link_to 'Destroy', technician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<h4 class="h4">Import Existing Technician Data</h4>
<%= form_tag import_technicians_path, multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Import From CSV" %>
<% end %>
</div>

<%= link_to 'New Technician', new_technician_path %>
