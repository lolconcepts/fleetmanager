<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Vehicle</th>
      <th>Odometer</th>
      <th>Signature</th>
      <th>Notes</th>
      <th>Satisfactory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.driver %></td>
        <td><%= report.vehicle %></td>
        <td><%= report.odometer %></td>
        <td><%= report.signature %></td>
        <td><%= report.notes %></td>
        <td><%= report.satisfactory %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
