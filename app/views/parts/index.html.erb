<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<table>
  <thead>
    <tr>
      <th>Sku</th>
      <th>Description</th>
      <th>Cost</th>
      <th>On hand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.sku %></td>
        <td><%= part.description %></td>
        <td><%= part.cost %></td>
        <td><%= part.on_hand %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<h4 class="h4">Import Existing Part Data</h4>
<%= form_tag import_parts_path, multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Import From CSV" %>
<% end %>
</div>

<%= link_to 'New Part', new_part_path %>
